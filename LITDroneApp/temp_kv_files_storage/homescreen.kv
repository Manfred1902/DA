#:kivy 1.1.1
#: import utils kivy.utils

<HomeScreen>:        
    canvas:
        Color:
            rgb: utils.get_color_from_hex("#303030")
        Rectangle:
            size: self.size
            pos: self.pos

    MDFloatLayout:
        MDLabel:
            text: "[b]Hello[/b]"
            size_hint: 0.8,0.1
            pos_hint: {"top": 0.8 , "right":0.9}
            markup: True
        MDLabel:
            id: passing_email
            size_hint: 0.8,0.1
            pos_hint: {"top": 0.75 , "right":0.9}
            markup: True

        LabelButton:
            id: automatic_page
            size_hint_x: 0.5
            pos_hint: {"center_x": 0.3, "center_y": 0.9}
            color: utils.get_color_from_hex("#448AFFFF")
            text: "[b]Auto Commands[/b]"
            halign: "center"
            markup: True
            on_release:
                app.change_screen("home_screen")

        LabelButton:
            id: controller_page
            size_hint_x: 0.5
            pos_hint: {"center_x": 0.7, "center_y": 0.9}
            color: utils.get_color_from_hex("#448AFFFF")
            text: "[b]Controller[/b]"
            halign: "center"
            markup: True
            on_release:
                app.change_screen("controller_screen")
        
        MDIconButton:
            id: logout_btn
            icon: "cog"
            size_hint_x: 0.5
            pos_hint: {"center_x": 0.3, "center_y": 0.3}
            width: root.width*0.5
            font_size: 20
            on_press: root.manager.current="settings_screen"