GridLayout:
    cols: 1
    canvas:
        Color:
            rgb: utils.get_color_from_hex("#303030")
        Rectangle:
            size: self.size
            pos: self.pos

    MDScreenManager:
        pos_hint: {"center_x": 0.5, "center_y": 0.4}
        size_hint_x: 1
        size_hint_y: 0.9
        id: screen_manager
        LoginScreen:
            id: login_screen
            name: "login_screen"
        SignUpScreen:
            id: signup_screen
            name: "signup_screen"
        HomeScreen:
            id: home_screen
            name: "home_screen"
        ControllerScreen:
            id: controller_screen
            name: "controller_screen"
        SettingsScreen:
            id: settings_screen
            name: "settings_screen"
        ForgotPasswordScreen:
            id: forgot_password_screen
            name: "forgot_password_screen"